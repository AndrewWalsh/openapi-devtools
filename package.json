    "@types/react-dom": "^18.2.13",
    "@types/react-window": "^1.8.7",
    "@types/truncate-middle": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@vitejs/plugin-react": "^4.1.0",
    "eslint": "^8.51.0",
    "eslint-plugin-react": "^7.33.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vitest": "^0.34.6"
  }
